{
  "builds": [
    {
      "src": "park/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "api/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "api/server.js" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "park/dist/index.html" }
  ]
}
